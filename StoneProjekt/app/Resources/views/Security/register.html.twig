{% extends "base.html.twig" %}

{% block title %} Registrierung {% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% block body %}
    <div class="under-container">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                           {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_errors(form.username) }}
                                    {{ form_widget(form.username) }}
                                </div>
                                <div class="form-group">
                                    {{ form_errors(form.vorname) }}
                                    {{ form_widget(form.vorname) }}
                                </div>
                                <div class="form-group">
                                    {{ form_errors(form.nachname) }}
                                    {{ form_widget(form.nachname) }}
                                </div>
                                <div class="form-group">
                                    {{ form_errors(form.plainPassword) }}
                                    {{ form_widget(form.plainPassword) }}
                                </div>

                                <div class="form-group">
                                     <div class="row">
                                         <div class="col-sm-6 col-sm-offset-3">
                                             <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Registrieren">
                                         </div>
                                     </div>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}