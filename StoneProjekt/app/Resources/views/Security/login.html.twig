{% extends "base.html.twig" %}
{% block title %} Anmendung {% endblock %}

{% block body %}
    <div class="under-container">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="col-xs-6">
                        <label class="active">Anmeldung</label>
                    </div>
                    {% if error %}
                        <div style="color: #c82333">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form action="{{ path('login') }}" method="post">
                                <div class="form-group">
                                    <input type="text" name="_username" id="username" tabindex="1" class="form-control" placeholder="Username" value="{{ last_username }}">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="_username" id="username" tabindex="1" class="form-control" placeholder="Passwort" value="">
                                </div>
                                {#
                                    If you want to control the URL the user
                                    is redirected to on success (more details below)
                                    <input type="hidden" name="_target_path" value="/account" />
                                #}
                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Anmelden">
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}